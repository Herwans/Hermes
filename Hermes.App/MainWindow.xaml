<Window
    x:Class="Hermes.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hermes.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="{StaticResource BackgroundBrush}"
    mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="Source directory" />
        <Label
            Grid.Row="0"
            Grid.Column="1"
            Content="Target directory" />
        <DockPanel
            Grid.Row="1"
            Grid.Column="0"
            LastChildFill="True">
            <Button Content="Browse" DockPanel.Dock="Right" />
            <TextBox />
        </DockPanel>
        <DockPanel
            Grid.Row="1"
            Grid.Column="1"
            LastChildFill="True">
            <Button Content="Browse" DockPanel.Dock="Right" />
            <TextBox />
        </DockPanel>
        <ListBox Grid.Row="2" />
        <ListBox Grid.Row="2" Grid.Column="1" />
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button Content="Move" />
        </StackPanel>
    </Grid>
</Window>