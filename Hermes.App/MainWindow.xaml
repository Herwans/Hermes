<Window
    x:Class="Hermes.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hermes.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Hermes.App.Mvvm.ViewModel"
    Title="MainWindow"
    Width="1280"
    Height="720"
    MinWidth="920"
    MinHeight="680"
    Background="{StaticResource BackgroundBrush}"
    mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="Source directory" />
        <Label
            Grid.Row="0"
            Grid.Column="1"
            Content="Target directory" />
        <DockPanel
            Grid.Row="1"
            Grid.Column="0"
            LastChildFill="True">
            <Button
                Command="{Binding BrowseSourceDirectoryCommand}"
                Content="Browse"
                DockPanel.Dock="Right" />
            <TextBox Text="{Binding SourceDirectory, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>
        <DockPanel
            Grid.Row="1"
            Grid.Column="1"
            LastChildFill="True">
            <Button
                Command="{Binding BrowseTargetDirectoryCommand}"
                Content="Browse"
                DockPanel.Dock="Right" />
            <TextBox Text="{Binding TargetDirectory, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>

        <ListBox Grid.Row="2" ItemsSource="{Binding SourceContent}" />
        <ListBox
            Grid.Row="2"
            Grid.Column="1"
            ItemsSource="{Binding TargetContent}" />
        <ProgressBar
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Height="32"
            Maximum="{Binding MaximumValue}"
            Value="{Binding CurrentValue}" />
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Button Command="{Binding MoveCommand}" Content="Move" />
        </StackPanel>
    </Grid>
</Window>